{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["tsconfig.json"]
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "space-infix-ops": ["error", { "int32Hint": false }],
        "quotes": [2, "single", { "avoidEscape": false }],
        "curly": "error"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
